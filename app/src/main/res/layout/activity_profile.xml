<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shetechs.shetechs.ProfileActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190dp"
        android:layout_height="167dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ana"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="144dp"
        android:freezesText="true"
        android:gravity="center"
        android:text="Ana Carolina Smith"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/scan_barcode_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/infobox"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:freezesText="true"
        android:gravity="center"
        android:text="Hey, I am a sophomore student at Harvard Extension School"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintBottom_toTopOf="@id/scan_barcode_button"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/message"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:text="Message"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/create_barcode_button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="236dp"
        android:background="@color/colorAccent"
        android:text="My Barcode"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/message"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />


    <Button
        android:id="@+id/scan_barcode_button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_textview"
        android:background="@color/colorAccent"
        android:text="Scan"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerVertical="true"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
